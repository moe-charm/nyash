box ConsBox {
    car
    cdr
    
    init {
        car, cdr
    }
    
    func getCar() {
        return me.car
    }
    
    func getCdr() {
        return me.cdr
    }
    
    func setCar(value) {
        me.car = value
    }
    
    func setCdr(value) {
        me.cdr = value
    }
    
    // ã‚·ãƒ³ãƒ—ãƒ«ãªæ–‡å­—åˆ—è¡¨ç¾
    func toString() {
        carStr = "nil"
        if (not NullBox.check_null(me.car)) {
            carStr = me.car + ""
        }
        
        cdrStr = "nil"  
        if (not NullBox.check_null(me.cdr)) {
            cdrStr = me.cdr + ""
        }
        
        return "(" + carStr + " . " + cdrStr + ")"
    }
}

// ãƒ•ã‚¡ã‚¯ãƒˆãƒªãƒ¼é–¢æ•°ï¼šcons
function cons(car, cdr) {
    result = new ConsBox()
    result.car = car
    result.cdr = cdr
    return result
}

// ãƒ•ã‚¡ã‚¯ãƒˆãƒªãƒ¼é–¢æ•°ï¼šãƒªã‚¹ãƒˆä½œæˆ
function list1(a) {
    return cons(a, new NullBox())
}

function list2(a, b) {
    return cons(a, cons(b, new NullBox()))
}

function list3(a, b, c) {
    return cons(a, cons(b, cons(c, new NullBox())))
}

// car/cdr ã‚¢ã‚¯ã‚»ã‚µé–¢æ•°
function car(pair) {
    return pair.getCar()
}

function cdr(pair) {
    return pair.getCdr()
}

