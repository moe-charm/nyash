// 1. åŸºæœ¬çš„ãªpackæ§‹æ–‡
box Animal {
    init { name, age }
    
    pack(animalName, animalAge) {
        me.name = animalName
        me.age = animalAge
    }
    
    speak() {
        return me.name + " (age " + me.age + ") makes a sound"
    }
}

// 2. fromãƒ‡ãƒªã‚²ãƒ¼ã‚·ãƒ§ãƒ³ã§ã®pack
box Dog from Animal {
    init { breed }
    
    pack(dogName, dogAge, dogBreed) {
        from Animal.pack(dogName, dogAge)  // è¦ªã®packã‚’å‘¼ã³å‡ºã—
        me.breed = dogBreed
    }
    
    override speak() {
        return me.name + " (age " + me.age + ", " + me.breed + ") barks: Woof!"
    }
}

