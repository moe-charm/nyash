// 4. packå˜ç‹¬ä½¿ç”¨ãƒ†ã‚¹ãƒˆ
box Bird {
    init { species, canFly }
    
    // packå˜ç‹¬ - Boxå“²å­¦ã«æœ€é©ï¼
    pack(birdSpecies, flying) {
        me.species = birdSpecies + " (packä½¿ç”¨)"
        me.canFly = flying
    }
    
    describe() {
        local flyText
        if me.canFly {
            flyText = "can fly"
        } else {
            flyText = "cannot fly"
        }
        return me.species + " - " + flyText
    }
}

